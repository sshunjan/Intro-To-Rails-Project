<!DOCTYPE html>
<html>
  <head>
    <title>IntroToRailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <header>
      <h1><%= link_to 'BookReaders.com', root_path%></h1>
      <nav class="navbar navbar-expand-sm bg-light">
        <ul class="navbar-nav row">
          <li class="nav-item col-sm btn"><%= link_to 'Home', root_path%></li>
          <li class="nav-item col-sm btn"><%= link_to 'Books', books_path%></li>
          <li class="nav-item col-sm btn"><%= link_to 'Countries', countries_path%></li>
          <li class="nav-item col-sm btn"><%= link_to 'About Us', about_path%></li>
          <li class="nav-item col-sm btn"><%= link_to 'Description', description_path%></li>
        </ul>
      </nav>
    </header>
    <div>
      <%= yield %>
    </div>
    <footer class="pt-4">
      <h5>Copywrong 2018</h5>
    </footer>
  </body>
</html>
